    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-Persistent",
            "request": "launch",
            "cwd" : "${workspaceRoot}\\build",
            "mainClass": "ir.Engine",
            "args" : [
                "-d",
                "../davisWiki",
                "-l",
                "../ir19.gif",
                "-p",
                "../patterns.txt",
                "-ni"
            ]
        },
        {
            "type": "java",
            "name": "Debug (Launch)-Search Engine",
            "request": "launch",
            "cwd" : "${workspaceRoot}\\build",
            "mainClass": "ir.Engine",
            "args" : [
                "-d",
                "../davisWiki",
                "-l",
                "../ir19.gif",
                "-p",
                "../patterns.txt",
            ]
        }
    ]
}
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug - Persistent",
            "request": "launch",
            "cwd" : "${workspaceRoot}",
            "mainClass": "ir.Engine",
            "classPaths": ["build"],
            "args" : [
                "-d",
                "davisWiki",
                "-l",
                "ir19.gif",
                "-p",
                "patterns.txt",
                "-ni"
            ]
        },
        {
            "type": "java",
            "name": "Debug - Search Engine",
            "request": "launch",
            "cwd" : "${workspaceRoot}",
            "classPaths": ["build"],
            "mainClass": "ir.Engine",
            "args" : [
                "-d",
                "davisWiki",
                "-l",
                "ir19.gif",
                "-p",
                "patterns.txt",
            ]
        },
        {
            "type": "java",
            "name": "Debug - Guardian index",
            "request": "launch",
            "cwd" : "${workspaceRoot}",
            "mainClass": "ir.Engine",
            "args" : [
                "-d",
                "guardian",
                "-l",
                "ir19.gif",
                "-p",
                "patterns.txt",
            ]
        }
    ]
}
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "label": "Build and run",
    "type" : "shell",
    "command": "",
    "tasks": [
        {
            "label": "Compile",
            "command": "",
            "windows": {
                "args": [
                    "scripts\\compile_all.bat"
                ],
            },
            "linux": {
                "args": [
                    "./scripts/compile_all.sh"
                ],
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "TokenTest",
            "command": "",
            "windows": {
                "args": [
                    "scripts\\run_tokenizer.bat"
                ],
            },
            "linux": {
                "args": [
                    "scripts/run_tokenizer.sh"
                ],
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "Search engine",
            "command": "",
            "windows": {
                "args": [
                    "scripts\\run_search_engine.bat"
                ],
            },
            "linux": {
                "args": [
                    "scripts/run_search_engine.sh"
                ],
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "Persistent",
            "command": "",
            "windows": {
                "args": [
                    "scripts\\run_persistent.bat"
                ],
            },
            "linux": {
                "args": [
                    "scripts/run_persistent.sh"
                ],
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "Guardian index",
            "command": "",
            "windows": {
                "args": [
                    "scripts\\run_search_engine_guardian.bat"
                ],
            },
            "linux": {
                "args": [
                    "scripts/run_search_engine_guardian.sh"
                ],
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "Guardian persistent",
            "command": "",

{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "label": "Build and run",
    "type" : "shell",
    "command": "",
    "tasks": [
        {
            "label": "Compile",
            "command": "",
            "args" : ["scripts\\compile_all.bat"],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "TokenTest",
            "command": "",
            "args": ["scripts\\run_tokenizer.bat"
            ],
            "options" : {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "test",
            },
        },
        {
            "label": "Search engine",
            "command": "",
            "args": ["scripts\\run_search_engine.bat"
            ],
            "options" : {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
        }
    ]
}